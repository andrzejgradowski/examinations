<% if user_signed_in? %>

  <% if policy(:proposal).index? || policy(:proposal).index_self? %> 
    <li><%= link_to proposals_path do %>
      <span class="fa fa-file-invoice"></span>&nbsp;<%=t "proposals.index.navbar" %>
      <% end %>
    </li>
  <% end %>

  <li class="dropdown">
    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false"><span class="fa fa-user"></span>&nbsp;<%= current_user.fullname %> <span class="caret"></span></a>

    <ul class="dropdown-menu">

      <li><%= link_to destroy_user_session_path, :method=>'delete' do %>
        <span class="glyphicon glyphicon-log-out"></span>&nbsp;<%=t "devise.link_to.sign_out" %>
        <% end %>
      </li>

    </ul>
  </li>

<% else %>
  <%# if request_from_the_security_area? %>
    <li><%= link_to new_user_session_path do %>
      <span class="glyphicon glyphicon-log-in"></span>&nbsp;<%=t "devise.link_to.sign_in" %>
      <% end %>
    </li>
  <%# end %>
<% end %>

